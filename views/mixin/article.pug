mixin article(number)
    article.flex.flex-column
        a(href="#")
            h3 Titre #{number}
        span
            |Lorem ipsum #{number}...
            a(href="#") Lire la suite
        div.flex.flex-row
            span.publicationDate
                i.fas.fa-calendar-alt
                |Publié le date #{number} par auteur #{number}
            span.category
                i.fas.fa-tag
                |Catégorie #{number}

mixin rowArticle(number)
    tr
        td #{number}
        td date #{number} à horaire #{number}
        td
            a(href="#") titre #{number}
        td auteur #{number}
        td catégorie #{number}
        td
            a(href="#")
                i.fas.fa-pen
                | Modifier
            a.red(href="#")
                i.fas.fa-trash-alt
                | Supprimer
